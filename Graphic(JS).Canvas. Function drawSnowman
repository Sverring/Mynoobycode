<!DOCTYPE html>
<html>
<head>
<meta charset='UTF-8'>
	<title> Canvas </title>
</head>
<body>
<canvas id='canvas' width='400' height='400'></canvas>

<script>
let canvas = document.getElementById('canvas');
let ctx = canvas.getContext('2d');
function drawSnowman (mainX, mainY) {

    function circle (x, y, radius, fillCircle) {
        ctx.lineWidth = 4;
        ctx.beginPath();
        ctx.arc(x, y, radius, 0, Math.PI * 2, false);
       
        if (fillCircle == true) {
            ctx.fill();
        } else {
            ctx.stroke();
        };   
    };

    //head
    ctx.strokeStyle = 'DarkRed';
    circle(mainX, mainY, 30, false);

    //1st eye
    ctx.fillStyle = 'DarkOrange';
    circle(mainX+10, mainY-5, 5, true);
    //2nd eye
    ctx.fillStyle = 'DarkOrange';
    circle(mainX-10, mainY-5, 5, true);
    //nose
    ctx.fillStyle = 'Indigo';
    circle(mainX, mainY+5, 5, true);

    //body
    ctx.strokeStyle = 'DarkRed';
    circle(mainX, mainY+70, 40, false);
    //1st point
    ctx.fillStyle = 'DarkOrange';
    circle(mainX, mainY+50, 5, true);
    //2nd point
    ctx.fillStyle = 'DarkOrange';
    circle(mainX, mainY+70, 5, true);
    //3rd point
    ctx.fillStyle = 'DarkOrange';
    circle(mainX, mainY+90, 5, true);
};
drawSnowman(50, 50);
</script>
</body>
</html>
